From 9bd89790bc605d2465e395fb4649367c85d5bbae Mon Sep 17 00:00:00 2001
From: Abhimanyu Vishwakarma <Abhimanyu.Vishwakarma@imgtec.com>
Date: Thu, 24 Nov 2016 19:26:46 +0530
Subject: [PATCH 71/74] MIPS: DTS: add booting from nand device support

Signed-off-by: Abhimanyu Vishwakarma <Abhimanyu.Vishwakarma@imgtec.com>
---
 arch/mips/boot/dts/img/pistachio_marduk.dts | 11 +++++++++++
 1 file changed, 11 insertions(+)

diff --git a/arch/mips/boot/dts/img/pistachio_marduk.dts b/arch/mips/boot/dts/img/pistachio_marduk.dts
index bff666b..7c387bc0 100644
--- a/arch/mips/boot/dts/img/pistachio_marduk.dts
+++ b/arch/mips/boot/dts/img/pistachio_marduk.dts
@@ -90,6 +90,17 @@
 		reg = <0>;
 		spi-max-frequency = <50000000>;
 	};
+	flash@1 {
+		compatible = "gigadevice,gd5f";
+		reg = <1>;
+		spi-max-frequency = <50000000>;
+		nand-on-flash-bbt;
+		spi-rx-bus-width = <2>;
+		spi-tx-bus-width = <4>;
+		#address-cells = <1>;
+		#size-cells = <1>;
+		linux,mtd-name = "spi-nand";
+	};
 };
 
 &uart0 {
